<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_item_height"
    card_view:cardElevation="3dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:paddingRight="@dimen/post_right_padding">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            fresco:viewAspectRatio="1" />


        <TextView
            android:id="@+id/slug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginTop="@dimen/slug_top_margin"
            android:layout_toRightOf="@id/item_icon"
            android:maxLines="1"
            android:text="Fashion"
            android:textColor="@color/postCat"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/slug"
            android:layout_marginTop="@dimen/slug_top_margin"
            android:layout_toRightOf="@id/item_icon"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="LCD ujdks dfk sdfjsdh fjsdf jshdfs dfjshdf sjdfh sdfssed almost 3 months is available for free use"
            android:textColor="@color/textColor"
            android:textSize="16dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>